<h1>Notifications List</h1>
{{#notifi}}

    <div class="localnotifi{{notifitype}} card mt-2 mb-2">
        <div class="card-body">
            <p>{{notifitext}}</p>
            <input type="button" class="btn btn-primary" value="Edit message" onclick="location.href='{{editurl}}?notifiid={{id}}'">
            <input type="button" class="local_notifi_delete_button btn btn-danger" data-notifiid="{{id}}" value="Delete message">

        </div>
    </div>
{{/notifi}}

<hr>
<input type="button" class="btn btn-primary" value="Create message" onclick="location.href='{{editurl}}'">
<input type="button" class="btn btn-secondary" value="Bulk edit messages" onclick="location.href='{{bulkediturl}}'">
